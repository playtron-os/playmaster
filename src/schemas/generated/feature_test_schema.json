{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FeatureTest",
  "type": "object",
  "properties": {
    "before_each": {
      "anyOf": [
        {
          "$ref": "#/$defs/BeforeEach"
        },
        {
          "type": "null"
        }
      ]
    },
    "description": {
      "type": "string",
      "default": ""
    },
    "name": {
      "type": "string"
    },
    "step_definitions": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "$ref": "#/$defs/Step"
        }
      }
    },
    "tests": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/TestCase"
      }
    },
    "vars": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {}
    }
  },
  "required": [
    "name",
    "tests"
  ],
  "$defs": {
    "BeforeEach": {
      "type": "object",
      "properties": {
        "steps": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Step"
          }
        }
      }
    },
    "FindBy": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "key": {
              "type": "string"
            }
          },
          "required": [
            "key"
          ]
        },
        {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            }
          },
          "required": [
            "text"
          ]
        },
        {
          "type": "object",
          "properties": {
            "placeholder": {
              "type": "string"
            }
          },
          "required": [
            "placeholder"
          ]
        }
      ]
    },
    "Match": {
      "type": "object",
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            }
          },
          "required": [
            "text"
          ]
        },
        {
          "type": "object",
          "properties": {
            "screenshot": {
              "type": "string"
            }
          },
          "required": [
            "screenshot"
          ]
        }
      ]
    },
    "Offset": {
      "type": "object",
      "properties": {
        "x": {
          "type": "integer",
          "format": "int32"
        },
        "y": {
          "type": "integer",
          "format": "int32"
        }
      },
      "required": [
        "x",
        "y"
      ]
    },
    "PointerAction": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "remove": {
              "type": "boolean"
            },
            "to": {
              "$ref": "#/$defs/Offset"
            }
          },
          "required": [
            "to",
            "remove"
          ]
        }
      ]
    },
    "ProgressWidgetType": {
      "type": "string",
      "enum": [
        "linear",
        "radial"
      ]
    },
    "ScrollTarget": {
      "type": "object",
      "properties": {
        "by": {
          "$ref": "#/$defs/FindBy"
        },
        "delta": {
          "$ref": "#/$defs/Offset"
        }
      },
      "required": [
        "by",
        "delta"
      ]
    },
    "SimpleStep": {
      "type": "string",
      "enum": [
        "settle"
      ]
    },
    "Step": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "wait_for": {
              "$ref": "#/$defs/WaitFor"
            }
          },
          "required": [
            "wait_for"
          ]
        },
        {
          "type": "object",
          "properties": {
            "not_found": {
              "$ref": "#/$defs/FindBy"
            },
            "timeout_millis": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint32",
              "minimum": 0
            }
          },
          "required": [
            "not_found"
          ]
        },
        {
          "type": "object",
          "properties": {
            "tap": {
              "$ref": "#/$defs/FindBy"
            }
          },
          "required": [
            "tap"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "$ref": "#/$defs/TypeAction"
            }
          },
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "match": {
              "$ref": "#/$defs/Match"
            }
          },
          "required": [
            "match"
          ]
        },
        {
          "type": "object",
          "properties": {
            "scroll": {
              "$ref": "#/$defs/ScrollTarget"
            }
          },
          "required": [
            "scroll"
          ]
        },
        {
          "type": "object",
          "properties": {
            "pointer": {
              "$ref": "#/$defs/PointerAction"
            }
          },
          "required": [
            "pointer"
          ]
        },
        {
          "type": "object",
          "properties": {
            "use_step": {
              "type": "string"
            }
          },
          "required": [
            "use_step"
          ]
        },
        {
          "$ref": "#/$defs/SimpleStep"
        }
      ]
    },
    "TestCase": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "default": ""
        },
        "name": {
          "type": "string"
        },
        "state": {
          "type": "string",
          "default": ""
        },
        "steps": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Step"
          }
        }
      },
      "required": [
        "name",
        "steps"
      ]
    },
    "TypeAction": {
      "type": "object",
      "properties": {
        "by": {
          "$ref": "#/$defs/FindBy"
        },
        "value": {
          "type": "string"
        }
      },
      "required": [
        "by",
        "value"
      ]
    },
    "WaitFor": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "key": {
              "type": "string"
            },
            "timeout_millis": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint32",
              "minimum": 0
            }
          },
          "required": [
            "key"
          ]
        },
        {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            },
            "timeout_millis": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint32",
              "minimum": 0
            }
          },
          "required": [
            "text"
          ]
        },
        {
          "type": "object",
          "properties": {
            "delay": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0
            }
          },
          "required": [
            "delay"
          ]
        },
        {
          "type": "object",
          "properties": {
            "progress": {
              "$ref": "#/$defs/ProgressWidgetType"
            },
            "timeout_millis": {
              "type": [
                "integer",
                "null"
              ],
              "format": "uint32",
              "minimum": 0
            }
          },
          "required": [
            "progress"
          ]
        }
      ]
    }
  }
}