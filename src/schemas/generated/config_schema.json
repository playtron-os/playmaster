{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Config",
  "description": "Configuration structure for the test controller application.",
  "type": "object",
  "properties": {
    "dependencies": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Dependency"
      }
    },
    "hooks": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/HookConfig"
      }
    },
    "project_type": {
      "$ref": "#/$defs/ProjectType"
    },
    "state_set_command": {
      "type": "string",
      "default": ""
    }
  },
  "required": [
    "project_type"
  ],
  "$defs": {
    "Dependency": {
      "type": "object",
      "properties": {
        "install": {
          "anyOf": [
            {
              "$ref": "#/$defs/InstallSpec"
            },
            {
              "type": "null"
            }
          ]
        },
        "min_version": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "version_command": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "min_version",
        "version_command"
      ]
    },
    "HookConfig": {
      "type": "object",
      "properties": {
        "args": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "async": {
          "type": "boolean"
        },
        "command": {
          "type": "string"
        },
        "env": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "string"
          }
        },
        "hook_type": {
          "$ref": "#/$defs/HookType"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "hook_type",
        "async",
        "command"
      ]
    },
    "HookType": {
      "description": "Defines the types of hooks available in the system.\nConnect: For establishing connections to a remote host if needed.\nVerifySystem: For verifying system prerequisites and dependencies.\nPrepareSystem: For preparing the system before running tests.",
      "type": "string",
      "enum": [
        "connect",
        "verify_system",
        "prepare_system",
        "finished"
      ]
    },
    "InstallSource": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "repo": {
              "type": "string"
            },
            "token": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "const": "bitbucket"
            }
          },
          "required": [
            "type",
            "repo",
            "token"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "url"
            },
            "url": {
              "type": "string"
            }
          },
          "required": [
            "type",
            "url"
          ]
        }
      ]
    },
    "InstallSpec": {
      "type": "object",
      "properties": {
        "bin_path": {
          "description": "Optional binary path inside the archive, e.g. \"flutter/bin\"",
          "type": [
            "string",
            "null"
          ]
        },
        "setup": {
          "description": "Optional setup command to run after installation",
          "type": [
            "string",
            "null"
          ]
        },
        "source": {
          "description": "Source information, if left empty will default to DNF install",
          "anyOf": [
            {
              "$ref": "#/$defs/InstallSource"
            },
            {
              "type": "null"
            }
          ]
        },
        "tool": {
          "description": "The tool name (used to find in Bitbucket/GitHub, etc.)",
          "type": "string"
        },
        "version": {
          "description": "Optional version, e.g. \"1.2.3\"",
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "tool"
      ]
    },
    "ProjectType": {
      "type": "string",
      "enum": [
        "flutter"
      ]
    }
  }
}